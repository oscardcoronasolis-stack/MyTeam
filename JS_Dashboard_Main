<script>
/* ============================================
   DASHBOARD - CONTROLADOR PRINCIPAL
   ============================================ */

const Dashboard = {
  
  // Inicializar dashboard
  async init() {
    Utils.log('Inicializando Dashboard');
    
    try {
      // Cargar datos
      await DashboardData.init();
      
      // Renderizar UI
      await DashboardRender.render();
      
      Utils.log('Dashboard iniciado correctamente');
      
    } catch (error) {
      Utils.log('Error al inicializar Dashboard', error);
      
      // Mostrar error al usuario
      const container = document.getElementById('dashboardContainer');
      if (container) {
        container.innerHTML = `
          <div style="padding: 40px; text-align: center; color: #EF4444;">
            <h2>Error al cargar datos</h2>
            <p>${error.message}</p>
            <button onclick="location.reload()" style="margin-top: 20px; padding: 12px 24px; background: #9945FF; color: white; border: none; border-radius: 8px; cursor: pointer;">
              Reintentar
            </button>
          </div>
        `;
      }
    }
  }
};
</script>
